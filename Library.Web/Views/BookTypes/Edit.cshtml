@model Library.Domain.Entities.BookType

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="panel">
        <div class="panel-heading">
            <h3>Edit the @Model.Description booktype</h3>
        </div>

        @using (Html.BeginForm("Edit", "BookTypes"))
        {
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.BookTypeID)
                @foreach (var property in ViewData.ModelMetadata.Properties)
                {
                    if (property.PropertyName == "Description")
                    {
                        <div class="form-group">
                            <label>@(property.DisplayName ?? property.PropertyName)</label>

                            @if (property.PropertyName == "Description")
                        {
                                @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                            }
                        </div>
                    }

                    @Html.ValidationMessage(property.PropertyName, new { @class="text-danger"})
                }
            </div>
            <div class="panel-footer">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel and return to List", "List", null, new { @class = "btn btn-success" })
            </div>
        }
    </div>
</div>
